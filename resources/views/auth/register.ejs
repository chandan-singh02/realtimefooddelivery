<section class="login flex justify-center pt-19">
  <div class="w-full max-w-md mx-auto px-2 py-9 rounded-lg shadow-lg bg-white">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-center text-gray-700">Register</h1>
    </div>
    <form action="/register" method="POST">
      <% if(messages.error) { %>
      <span class="text-red-500 text-sm"><%= messages.error %></span>
      <% } %>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="username">
          Username
        </label>
        <input
          value="<%= messages.name  %>"
          class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          name="name"
          type="text"
          placeholder="Username"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="email">
          Email
        </label>
        <input
          value="<%= messages.email  %>"
          class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          name="email"
          type="email"
          placeholder="Email"
        />
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 font-bold mb-2" for="password">
          Password
        </label>
        <input
          class="appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
          name="password"
          type="password"
          placeholder="Password"
        />
      </div>

      <div class="flex items-center align-items justify-center px-4">
        <button
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit"
        >
          Register
        </button>
        <a class="inline-block align-baseline font-bold text-sm" href="/login">
          Already have account?
        </a>
      </div>
    </form>
    <p class="text-center text-gray-500 text-xs mt-4">
      &copy;2022 killJoy. All rights reserved.
    </p>
  </div>
</section>
