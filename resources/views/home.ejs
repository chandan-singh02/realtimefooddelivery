<section class="hero py-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-lg">
        Never have a bad meal Every meal matters Shaping the future of food
      </h6>
      <h1 class="text-2xl md:text-3xl font-bold">
        Unexpected guests? || Hungry? Order fresh food now.
      </h1>
      <button
        class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
      >
        Order Now
      </button>
    </div>
    <div class="w-1/2">
      <img src="/img/hero2.png" alt="" />
    </div>
  </div>
</section>

<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16"
  >
    <% pizzas.forEach(function(pizza) { %>
    <div
      class="mt-6 w-full md:w-64 relative rounded-lg shadow-lg bg-white overflow-hidden"
    >
      <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="" />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
        <span class="size py-1 px-4 rounded-full uppercase text-xs"
          ><%= pizza.size %></span
        >
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
          <button
            data-pizza="<%= JSON.stringify(pizza) %>"
            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>
